                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Descripcion}" Value="">
                                                            <Setter Property="Height" Value="0"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Foreground="DarkBlue" FontWeight="Black" FontSize="20" TextWrapping="Wrap" Text="{Binding NombreAsignatura}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NombreAsignatura}" Value="">
                                                            <Setter Property="Height" Value="0"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock FontSize="17.5" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding NombreMaestro}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NombreAsignatura}" Value="">
                                                            <Setter Property="Height" Value="0"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock FontSize="15" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding Aula}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NombreAsignatura}" Value="">
                                                            <Setter Property="Height" Value="0"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Foreground="blue" FontSize="15" FontStyle="Italic" FontWeight="Bold" TextWrapping="Wrap"><Run Text="{Binding HoraInicio}"></Run>:00 - <Run Text="{Binding HoraFin}"></Run>:00</TextBlock>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
